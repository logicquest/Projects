<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/silvershape"
    android:orientation="vertical" >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="fill_parent"    
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:layout_weight="0.05"        
        android:orientation="vertical" >
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          	android:layout_gravity="center"
            android:layout_margin="10dip"
            android:text="Alarm Details:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" />


      <!--  <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:background="@color/dkgrey" /> -->

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedcorners"
              android:layout_marginBottom="20dip"
			android:layout_marginLeft="15dip"            
            android:layout_marginRight="15dip" 
            >
            
            
			    <TextView
                android:id="@+id/textVi1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="20dip"
                android:text="To - Do:"                
                android:textColor="@color/blue"/>              

           	 <ImageButton
                android:id="@+id/newnote"
                android:layout_width="60dip"
                android:layout_height="40dip"
               	android:src="@drawable/newnote"
                android:layout_toRightOf="@id/textVi1"
                android:layout_marginLeft="30dip"
                android:layout_marginTop="20dip"/>			            
                
              <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginTop="10dip"
            android:layout_below="@id/newnote"
            android:background="@color/blue"
            android:id="@+id/viw" />             
            <TextView 
            	android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/viw"
                android:layout_marginTop="20dip"                              
                android:layout_marginLeft="15dip"
                android:text="Dist More:"                
                android:textColor="@color/blue" />

			 <TextView
                android:id="@+id/distancev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView2"
                android:layout_below="@id/viw"
                android:layout_marginTop="20dip"
                android:layout_marginLeft="30dip"   
                android:layout_marginRight="15dip"
                android:text="0.0 Km more"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black" />
                
                <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
           
            android:layout_marginTop="10dip"
            android:layout_below="@id/distancev"
            android:background="@color/blue"
            android:id="@+id/viw1" />         
           
            <TextView
                android:id="@+id/textVi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/viw1"
                android:layout_marginTop="20dip"                              
                android:layout_marginLeft="15dip"
                android:text="Alarm :"                
                android:textColor="@color/blue" /> 
                     
            <ToggleButton
                android:id="@+id/toggleButton1"
                android:layout_width="60dip"
                android:layout_height="40dip"                
                android:layout_below="@id/viw1"
                android:layout_marginTop="10dip"
                android:layout_toRightOf="@id/textVi"
                 android:layout_marginLeft="35dip"
                 
                android:onClick="onToggleClicked"
                android:soundEffectsEnabled="true"
                android:text="ToggleButton"
                android:textOff="Alarm Off"
                android:textOn="Alarm On" />
                   <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"           
            android:layout_marginTop="10dip"
            android:layout_below="@id/toggleButton1"
            android:background="@color/blue"
            android:id="@+id/viw2" />       
            
            
            
            <TextView
                android:id="@+id/destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/viw2"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="20dip"
                android:text="Destination:"                
                android:textColor="@color/blue"
                android:layout_marginBottom="20dip" />
                               
                <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                android:layout_marginRight="15dip"
                android:layout_marginTop="20dip"
                android:layout_marginLeft="20dip"
                android:inputType="textMultiLine"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@id/viw2"                
                android:layout_toRightOf="@id/destination"
             
                android:text="No Alarm Set !"
                android:textColor="@color/black" 
                  android:layout_marginBottom="20dip" 
                />              
            
                  <View
            android:layout_width="fill_parent"
            android:layout_height="0dip"           
            android:layout_marginTop="1dip"
            android:layout_below="@id/distance"
            android:background="@color/white"
            android:id="@+id/viw0" />                               
                      

           
        </RelativeLayout>
         </LinearLayout>

</LinearLayout>

</ScrollView>